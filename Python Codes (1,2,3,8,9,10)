import numpy as np
# create numpy 2d-array
m = np.array([[1, 13, 2],
          	[2, 7, 4],
          	[4, 9, 6]])
print("Original 2D array:\n",m)
w, v = np.linalg.eig(m)
# printing eigen values
print("Eigen values:\n",w)
# printing eigen vectors
print(â€œeigenvectors:\n",v)
